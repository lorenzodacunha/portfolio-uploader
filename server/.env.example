PORT=3333

# Root path of the production portfolio project.
PORTFOLIO_ROOT=..\..\Portfolio Produção

# Real project data files used by the production portfolio.
PROJECTS_PT_PATH=data/projects/projects.json
PROJECTS_EN_PATH=data/projects/projects-en.json
PROJECTS_ES_PATH=data/projects/projects-es.json

# Real image directories used by the production portfolio.
PROJECTS_ASSETS_DIR=assets/images/projects
PROJECTS_THUMBS_DIR=assets/images/projects/thumbs

# Optional path for extracting known icon classes from iconMap.
ICONS_FILE_PATH=js/icons.js

# Upload limits
MAX_FILE_SIZE_MB=20
MAX_UPLOAD_FILES=40

# Image normalization profile (all new uploads become .webp)
THUMB_MAX_WIDTH=800
GALLERY_MAX_WIDTH=2000
WEBP_QUALITY=82

# Allow inline style attribute in sanitized HTML descriptions
ENABLE_INLINE_STYLE=false
